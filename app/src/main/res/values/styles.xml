<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorNumberStyle" parent="Widget.Material3.Button.TextButton">
        <item name="android:fontFamily">@font/gogh_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">40sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">74dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalculatorButtonStyle" parent="Widget.Material3.Button">
        <item name="android:fontFamily">@font/gogh_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">40sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">@color/button_primary</item>
        <item name="shapeAppearance">@style/CircularShape</item>
    </style>

    <style name="CircularShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>